@model HealthInspector.ViewModels.Search

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Search</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Speciality" class="control-label"></label>
                @Html.DropDownListFor(x => x.Speciality, new SelectList(Model.Specialities, "Text", "Value", Model.Speciality), "--Select--", new { @class = "form-control" })
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locality" class="control-label"></label>
                @Html.DropDownListFor(x => x.Locality, new SelectList(Model.Localities, "Zipcode", "Zipcode", Model.Locality), "--Select--", new { @class = "form-control" })
                <span asp-validation-for="Locality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
