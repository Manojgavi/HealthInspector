@model HealthInspector.ViewModels.FeedbackViewModel

@{
    ViewData["Title"] = "Feedbackdata";
}

<h1>Feedback Form</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Feedbackdata">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                @Html.DropDownListFor(x => x.DoctorId, new SelectList(Model.Clinics, "Id", "ClinicName", Model.DoctorId), "--Select--", new { @class = "form-control" })

                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                @*<input asp-for="Review" class="form-control" />*@
                 <textarea asp-for="Review" class="form-control"  placeholder="Write here.."></textarea>
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Questionnaire" asp-action="QuestionnaireData">Please Spare Some Minutes To Help Us Improve</a>
</div>

