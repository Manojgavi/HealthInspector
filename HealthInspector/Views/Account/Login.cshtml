@model HealthInspector.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<main class="page-auth">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <section class="auth-wrapper">
                    <div class="row">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <h2 class="auth-section-title">Log In</h2>
                            <p class="auth-section-subtitle">Sign in to your account to continue.</p>
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="UserId">User ID <sup>*</sup></label>
                                    <input asp-for="UserId"  class="form-control"  placeholder="User ID *">
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password <sup>*</sup></label>
                                    <input asp-for="Password" type="password" class="form-control"  placeholder="Password *">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-actions-wrapper d-flex flex-wrap align-items-center justify-content-between">
                                    <div class="form-check">
                                        <!--<input class="form-check-input" type="checkbox" value="" id="keepLogin">-->
                                        <a asp-action="ForgotUserId">
                                            <label class="form-check-label">
                                                Forgot User ID
                                            </label>
                                        </a>
                                    </div>
                                    <a class="forgot-password-link" asp-action="ForgotPassword">Forgot password?</a>
                                </div>
                                <button class="btn btn-primary btn-auth-submit" type="submit">Login</button>
                            </form>
                            <p class="mb-0">
                                <a asp-action="Register" class="text-dark font-weight-bold">New User? Sign Up</a>
                            </p>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <img src="~/theme1/assets/images/login.png" alt="login" class="img-fluid">
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>

