@model HealthInspector.ViewModels.BmiViewModel

@{
    ViewData["Title"] = "CreateBmi";
}

<h2>Body Mass Index Calculator</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBmi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Get BMI" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="GetRecommendation" asp-action="BmiCalculator">Get Diet And Exercise Recommendation</a>
</div>

